#include "main.h"
/**
 * p_buffer - print charachter in buffer using _putchar
 * @buffer: (buffer) array of char
 * @b_index: pointer to int
 * Return: void
*/
void p_buffer(char buffer[], int *b_index)
{
    if (*b_index > 0)
    {
        for (int i = 0; i < *b_index; i++)
        {
            _putchar(buffer[i]);
        }
    }

    *b_index = 0;
}
